<!-- button的基本使用 -->
<button>按钮</button>
<!-- size：mini -->
<button size="mini">按钮</button>
<button size="mini">按钮</button>
<!-- type:primary|default|warn -->
<button type="primary">按钮</button>
<button type="default">按钮</button>
<button type="warn">按钮</button>
<!-- plain:镂空效果 -->
<button plain>按钮</button>
<!-- disabled:不可用 -->
<button disabled>按钮</button>
<!-- loading -->
<button loading>按钮</button>
<button loading="{{isload}}">按钮</button>
<!-- hover-class -->
<button hover-class="press">按钮</button>














<!-- 1 text组件的基本使用 -->
<text>哈哈哈</text>
<text>你好，小程序\n</text>
<text>还可以换行\n</text>
<!-- 2 属性使用 -->
<!-- 默认情况下text文本长按是不能选中 selectable=false -->
<text selectable='{{true}}'>文本选中\n</text>

<!-- space决定空格的大小 -->
<text>hello world\n</text>
<!-- 根据字体设置的空格大小 -->
<text space="nbsp">hello world\n</text>
<!-- 半个中文字符的大小 -->
<text space="ensp">hello world\n</text> 
<!-- 一个中文字符的大小     -->
<text space="emsp">hello world\n</text>

<!-- decode：是否解码文本 -->
<text>5 &gt; 3\n</text>
<text decode>5 &gt; 3</text>














