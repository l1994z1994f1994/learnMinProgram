<!-- input的基本使用  -->
<!-- 可以写成单标签，也可以双标签 -->
<input></input>
<!-- value:input中的默认值，也是初始化值 -->
<input value="123"></input>
<!-- type：决定键盘的类型(文本|数字|身份证|带小数点的数字<-> text|number|idcard|digit) -->
<input type="number"></input>
<!-- password:暗文 -->
<input password></input>
<!-- placeholder:提示文本 -->
<input placeholder="请输入" placeholder-style="color:red"></input>
<!-- input的绑定事件 -->
<input bindfocus="inputFocus" bindinput="handleInput" bindblur="inputBlur"></input>
















<!-- image的基本使用 -->
<!-- 1、image组件可以写成单标签，也可以写成双标签 -->
<!-- 2、image组件默认有自己的大小 320 * 240 与分辨率无关，行内块级元素-->
<!-- 3、 src:本地路径(相对/绝对)/远程地址 -->
<image src="../../assets/image/01.jpg" mode="aspectFit"></image>
<image src="/assets/image/01.jpg"></image>
<image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"></image>
<!-- 补充：从相册中选图片 -->
<button  bindtap="handleChooseAlbum">选图片</button>
<image src="{{imgPath}}"></image>
<!-- lazy-load:懒加载 -->
<!-- bindload:监听图片加载完成 -->
