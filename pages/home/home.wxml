<!-- 使用 wx:for-item 可以指定数组当前元素的变量名， -->
<!-- 使用 wx:for-index 可以指定数组当前下标的变量 -->
<view wx:for="{{array}}" wx:key="{{index}}" wx:for-index="idx" wx:for-item="itemName">
  {{idx}}: {{itemName.message}}
</view>
