<!-- WXS模块 小程序的脚本语言-->
<!-- 方式一 es5语法-->
<!-- common.js的模块化导出写法 -->
<wxs module="foo">
var some_msg = "hello world，你好小程序";
module.exports = {
  msg : some_msg,
}
</wxs>
<view> {{foo.msg}} </view>

