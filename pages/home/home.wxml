<!--home.wxml-->
<!-- 数据绑定 {{}} --mustache语法-->
<view>{{name}}</view>
<!-- 列表展示 wx:for  -->
<view>{{students[0].name}}</view>
<view wx:for="{{students}}" wx:key='{{item.id}}'>{{item.name}}-{{item.age}}</view>
<!-- 事件监听改变data -->
<view>当前计数：{{count}}</view>
<button size="mini" bindtap="handleTap">点击添加</button>
<button size="mini" open-type="getUserInfo" bindgetuserinfo="getUserFn">获取授权</button>
<open-data type="userNickName"></open-data>
