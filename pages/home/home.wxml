<!-- 条件判断 wx:if wx:elif wx:else -->
<view wx:if="{{isShow == 1}}">hahaha</view>
<view wx:elif="{{isShow == 2}}">heiheihehiehi</view>
<view wx:else>xixixixi</view>

<!-- hidden属性 -->
<view hidden="{{true}}">hidden1</view>
<view hidden="{{false}}">hidden2</view>

<!-- 列表渲染 wx:for -->
<view wx:for='{{["qwe","ewq","weq"]}}' wx:key="{{index}}">{{index}}-{{item}}</view>
<!-- <view wx:for="hello world" wx:key="{{index}}">{{item}}</view>
<view wx:for="{{10}}" wx:key="{{index}}">{{item}}</view> -->

<!-- block标签:不是组件，只是一个包装标签，在页面中不做任何渲染，只接受控制属性 -->
<block wx:if="{{isShow}}">
  <view>1</view>
  <view>2</view>
  <view>3</view>
</block>
