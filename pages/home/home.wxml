<!-- 模版template -->
<!-- 定义模版 -->
<template name="temp">
  <view>hehehe</view>
  <text>{{cont}}</text>
</template>

<!-- 引用模版 -->
<template is="temp" />
<!-- 模版传值 -->
<template is="temp" data="{{cont:'今天是个好天气'}}" />

<!-- wxml文件中的两种导入方法 -->
<!-- 引用：import可以确定引用范围；include：引用整个文件到标签处 -->
<!-- src：绝对路径/相对路径 都可以 -->
<!-- import：主要是导入template，不能进行递归导入 -->
<!-- include：可以将公共的组件导入到一个文件中，不能导入template/wxs，可以进行递归导入 -->
<import src="../about/about.wxml" />
<template is="temp_about" data="{{cont:'今天星期天',viewText:'看效果'}}" />
<view>————————————————————————————</view>
<include src="../about/about.wxml"/>
<template is="temp_about" data="{{cont:nowTime,viewText:'include'}}" />















